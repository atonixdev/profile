# Atonix IoT Agent configuration
# Copy to: /etc/atonix/iot_agent.env

ATONIX_API_BASE=http://YOUR_SERVER:8000/api
ATONIX_DEVICE_ID=1
ATONIX_DEVICE_TOKEN=PASTE_DEVICE_TOKEN_HERE

# Polling/heartbeat
ATONIX_POLL_SECONDS=2
ATONIX_HEARTBEAT_SECONDS=10

# Optional: Arduino serial integration
# ATONIX_SERIAL_PORT=/dev/ttyACM0
# ATONIX_SERIAL_BAUD=115200
