# Production Environment Configuration for atonixdev.org
# Copy this to .env and update with your actual values

# Django Settings
DEBUG=False
SECRET_KEY=your-production-secret-key-here-generate-a-strong-one
ALLOWED_HOSTS=localhost,127.0.0.1,atonixdev.org,api.atonixdev.org,www.atonixdev.org

# Database (PostgreSQL)
DB_NAME=personal_brand_hub_prod
DB_USER=postgres
DB_PASSWORD=your-production-db-password
DB_HOST=db
DB_PORT=5432

# CORS Settings
CORS_ALLOWED_ORIGINS=https://atonixdev.org,https://www.atonixdev.org

# Frontend
REACT_APP_API_URL=https://api.atonixdev.org/api
NODE_ENV=production

# Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=80
DB_PORT=5432

# Features
ENABLE_SOCIAL_LINKS=true
ENABLE_BLOG=true
ENABLE_COMMUNITY=true